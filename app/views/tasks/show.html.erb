<h2><%= @task.title%></h2>
<p><%= @task.details%></p>
<%=link_to "Edit this task", edit_task_path(@task.id)%>
<br>
<%if @task.completed%>
<input type="checkbox" id="completed" checked>
<label for="completed">This task is completed</label>
<%else%>
<input type="checkbox" id="completed">
<label for="completed">This task is completed</label>
<%end%>

<br>
<%=link_to "Back to list", tasks_path%>
